<script>
    $(document).ready(function () {
        // Lấy dữ liệu từ sessionStorage
        var userJson = sessionStorage.getItem('user');
        if (userJson) {
            var user = JSON.parse(userJson);
            var fullname = user.fullname; // Lấy tên người dùng từ sessionStorage

            if (user.role === 1) {
                // Tạo liên kết mới
                var accountLink = document.createElement('a');
                accountLink.href = '/Accounts/ListsMember';
                accountLink.classList.add('nav-link');

                // Thêm nội dung vào liên kết
                accountLink.innerHTML = `
                        <span class="icon-holder">
                            <i class="fas fa-users"></i>
                        </span>
                        <span class="title">Account</span>
                    `;

                // Lấy phần tử có id là account-link
                var accountListItem = document.getElementById('account-link');
                // Thêm liên kết vào phần tử
                accountListItem.appendChild(accountLink);
            }

            // Thay đổi nội dung của phần tử HTML
            var profileName = document.getElementById('user_name');
            if (profileName) {
                profileName.innerText = fullname;
            } else {
                console.log("Element with class 'font-weight-semibold' not found in '.pop-profile'");
            }
            var avatar = user.avatar; // Lấy đường dẫn hình ảnh của người dùng từ sessionStorage

            // Thay đổi đường dẫn hình ảnh trong thẻ img có id là "userImage"
            var userImage = document.getElementById('userImage');
            var userImage2 = document.getElementById('userImage2');
            if (userImage) {
                userImage.src = "/Images/Avatar/" + avatar;
            } else {
                console.log("Image element with id 'userImage' not found");
            }
            if (userImage2) {
                userImage2.src = "/Images/Avatar/" + avatar;
            } else {
                console.log("Image element with id 'userImage' not found");
            }
            console.log('Username:', user.username);
            console.log('fullname:', user.fullname);
            console.log('Role:', user.role);
            console.log('UserID:', user.userid);
            console.log('Avatar:', user.avatar);
        } else {
            $('#navbar-head').append('<li class="nav-item"><a class="nav-link" href="/Authen/Login">Login</a></li>');
        }
        $('#navbar-head').on('click', '#logout-link', function (e) {
            e.preventDefault();
            sessionStorage.removeItem('user');

            window.location.href = $(this).attr('href');
        });
    });
    $(document).ready(function () {
        $('#logout-link').click(function (e) {
            e.preventDefault();
            sessionStorage.removeItem('user');
            window.location.href = '/HomePage/Home';
        });

    });
</script>

